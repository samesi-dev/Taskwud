<%- include('./partials/header'); -%>

		<!--**********************************
            Content body start
        ***********************************-->
		
		<div class="content-body">
			<div class="container-fluid">
				<div class="col-xl-12">
					<div class="card">
						<div class="card-header border-0">
							<div>
								<h1 class="fs-20 font-w700">Create Task</h1>
							</div>
							<div class="dropdown">
								<div class="btn-link" data-bs-toggle="dropdown">
									<svg width="24" height="24" viewbox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
										<circle cx="12.4999" cy="3.5" r="2.5" fill="#A5A5A5"></circle>
										<circle cx="12.4999" cy="11.5" r="2.5" fill="#A5A5A5"></circle>
										<circle cx="12.4999" cy="19.5" r="2.5" fill="#A5A5A5"></circle>
									</svg>
								</div>
								<div class="dropdown-menu dropdown-menu-right">
									<a class="dropdown-item" href="javascript:void(0)">Delete</a>
									<a class="dropdown-item" href="javascript:void(0)">Edit</a>
								</div>
							</div>
						</div>
						<div class="card-body">
								
							<form method="POST" action="/task/<%= findTask.id %>?_method=PUT" class="row g-3 d-flex justify-content-center">
								<div class="col-xl-7 col-sm-7 col-md-7 ">
								  <label class="form-label">Task Name</label>
								  <input name="taskname" type="text" value="<%= findTask.taskname %>" class="form-control" placeholder="Name" >
								</div>
								<div class="col-xl-7 col-sm-7 col-md-7">
								  <label  class="form-label">instruction</label>
								  <input name="instruction" type="text" value="<%= findTask.instruction %>" class="form-control" placeholder="Enter Instruction" >
								</div>
								<div class="col-xl-7 col-sm-7 col-md-7 ">
									<label  class="form-label">Start date</label>
									<input name="startDate" type="date" value="<%= findTask.startDate %>" class="form-control" placeholder="Time">
								</div>
								<div class="col-xl-7 col-sm-7 col-md-7 ">
									<label  class="form-label">Start time</label>
									<input name="startTime" type="time" value="<%= findTask.startTime %>" class="form-control" placeholder="Time">
								</div>
								<div class="col-xl-7 col-sm-7 col-md-7 ">
									<label  class="form-label">End date</label>
									<input name="endDate" type="date" value="<%= findTask.endDate %>" class="form-control" placeholder="Time">
								</div>
								<div class="col-xl-7 col-sm-7 col-md-7 ">
									<label  class="form-label">End time</label>
									<input name="endTime" type="time" value="<%= findTask.endTime %>" class="form-control" placeholder="Time">
								</div>
								<div class="col-xl-7 col-sm-7 col-md-7">
									<label class="form-label">Add Users</label>
									<!-- <input id="userinput" type="text" name="users[]" class="form-control mb-3" placeholder="Name" onkeyup="manage(this)"> -->
									<div class="d-flex flex-row">
										<input id="userinput" type="text" class="form-control" placeholder="abc@xyz.com" onkeyup="showResults(this.value)">
										<button id="addbtn" class="form-control" type="button" onClick="addInput();">+</button>
									</div>
									<div id="livesearch" class="p-3 d-none">
										This
									</div>
									<div id="error" class="text-danger p-2">
										
									</div>
									<div id="formulario" class="d-flex flex-row flex-wrap mt-2">
										<% findTask.taskmember.forEach(function(obj){ %>
											<div class='input-group section mt-2' style='width: 120px;margin-right: 8px'><input type='text' class='form-control input' placeholder='Name' value='<%= obj %>'><div style='position: absolute; top: 0; right: 0; paddign-top: -5px'><input class='button' type='button' value='-'></div></div>
										<% }) %>
									</div>
								</div>
	
								<div class="col-xl-7 col-sm-7 col-md-7">
								  <button type="submit" class="btn btn-primary">Update</button>
								</div>
							  </form>
						</div>
					</div>
				</div>
			</div>
		</div>
			
        <!--**********************************
            Content body end
        ***********************************-->
		
		<%- include('partials/footer'); -%>